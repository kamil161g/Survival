<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    {% endblock %}
    {#<body background="dark-grey-terrazzo.png">#}
    <body STYLE="background-color: rgba(74,74,74,0.91)">
    <div class="container"><h2 style="color: red"> SurvivalVillage </h2>
        <a href="{{ path('index') }}"><button class="btn-default">HOME</button> </a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('logout') }}"><button class="btn-warning">Wyloguj się</button> </a>
            <a href="{{ path('myProfilVillage', {'id': app.user.id}) }}"><button class="btn-success">Wioska</button> </a>
        {% else %}
            <a href="{{ path('app_login') }}"><button class="btn-success">Zaloguj się</button> </a>

        {% endif %}


        {% block body %}

            
        {% endblock %}
    </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
